<!DOCTYPE html>
<html lang="eng">

<!-- Head -->
<%-include("templates/head.ejs")-%>

<body>

  <!--Nav bar-->
  <%-include("templates/nav.ejs")-%>

  <div class="w3-main" style="margin-top: 85px">
    <p style="margin-left:25px"><% if (searched) { %> Result for: <%-searched%> <% } else { %>Total Products: <%=products.length%> <% } %></p>

    <div class="w3-row w3">
      <% for(var i = 0; i < products.length; i++) { %>
      <div class="w3-col l3 s6" style="width:307px;height: 307px;">
        <div class="w3-container">
          <div class="w3-display-container">
            <img style="width:250px;height: 250px;" src=../<%=products[i].image%>>
              <div class="w3-display-middle w3-display-hover">
                <% if (admin) { %>
                <a class="w3-button w3-red" onclick="removeProduct(<%=products[i].id%>)">Remove item <i class="fa fa-trash"></i></a>
                <% } else { %>
                <a class="w3-button w3-black" onclick="addToCart(<%=products[i].id%>)">Add to cart <i class="fa fa-shopping-cart"></i></a>
                <% } %>
              </div>
          </div>
          <p><%=products[i].title%><br><b>Â£<%=products[i].Price%></b></p>
        </div>
      </div>
      <% } %>
    </div>

  </div>

<!-- Footer -->
<%-include("templates/footer.ejs")-%>

</body>
</html>
