<div class="w3-top">
  <div class="w3-bar w3-white w3-padding w3-card" style="letter-spacing:4px;">

    <a class="w3-bar-item w3-button" href="/">Vulnerable Store</a>

    <div class="w3-left w3-hide-medium">
      <a class="w3-bar-item w3-button" onclick="document.getElementById('focus').focus()">Contact</a>
    </div>

    <div class="w3-middle w3-hide-medium">
      <form method="POST" action="/search">
        <button class="w3-bar-item w3-button" type="submit"><i class="fa fa-search"></i></button>
        <input class="w3-bar-item w3-border w3-round-large" type="text" placeholder="Search..." name="productname">
      </form>
    </div>

    <div class="w3-right w3-hide-small">
      <div class="w3-dropdown-hover w3-right">
        <a class="profile w3-button w3-bar-item"><i class="fa fa-user"><% if (name) { %><%=name %><% } %></i></a>

        <div class="w3-dropdown-content w3-bar-block w3-card-5" style="right:0">
          <% if (admin) { %>
          <a href="/users/logout" class="w3-bar-item w3-button">Logout</a>
          <a href="/profile" class="w3-bar-item w3-button">Profile</a>
          <a href="/addItem" class="w3-bar-item w3-button">Add Item</a>
          <% } else if (name) { %>
          <a href="/users/logout" class="w3-bar-item w3-button">Logout</a>
          <a href="/profile" class="w3-bar-item w3-button">Profile</a>
          <% } else { %>
          <a onclick="document.getElementById('id01').style.display='block'" class="w3-bar-item w3-button">Login</a>
          <a onclick="document.getElementById('id01').style.display='none'; document.getElementById('id02').style.display='block'" class="w3-bar-item w3-button">Register</a>
          <% } %>
        </div>

      </div>
    </div>

    <div class="w3-right w3-hide-small">
      <a class="shopping-cart w3-button w3-bar-item" href="/cart"><i class="fa fa-shopping-cart"><% if (cartCount) { if (cartCount == 0) { } else { %><%=cartCount%><% } } %></i></a>
    </div>

  </div>

  <div class="login_div" <% if (loginError || registerSuccess) { %>style="display:block"<% } %> id="id01">
    <span class="close" onclick="document.getElementById('id01').style.display='none'" title="Close Modal">&times;</span>
    <form class="login-content animatelog" method="POST" action="/users/login">

      <div class="logcontainer">

        <% if (registerSuccess) { %>
          <div class="clearfix">
            <p style="color:green">Registration Successful!</p>
            <p>You could login now</p>
          </div>
        <%}%>

        <% if (loginError) { %>
        <p style="color:red"><%=loginError%></p>
        <% } %>
        <label for="uname"> <b>Username</b></label>
        <input class="login" type="text" placeholder="Enter Username" name="username" required id="username">
        <label for="psw"> <b>Password</b></label>
        <input class="login" type="password" placeholder="Enter Password" name="password" required id="password">
        <button class="bb" type="submit">login</button>
        <label><input type="checkbox" checked name="remember"> Remember me</label>
      </div>

      <div class="logcontainer" style="background-color:#f1f1f1;">
        <button class="cancelbtn" type="button" onclick="document.getElementById('id01').style.display='none'">Cancel</button>
        <span class="psw">Forget <a href="#" id="forget">Password?</a> or <a href="#" id="signupbt" onclick="document.getElementById('id01').style.display='none'; document.getElementById('id02').style.display='block'">Sign up</a></span>
      </div>
    </form>
  </div>

  <div class="signup_div" <% if (registerError) { %>style="display:block"<% } %> id="id02">
    <span class="close1" onclick="document.getElementById('id02').style.display='none'" title="Close Modal1">&times;</span>
    <form class="signup-content animatesign" method="POST" action="/users/register">

      <div class="signcontainer">
          <h1>Sign up</h1>
          <p>Please fill in this form to create an account.</p>
          <hr id="hrsign">
          <% if (registerError) { %>
            <p style="color:red"><%=registerError%></p>
          <% } %>
          <label for="username"><b>Username</b></label>
          <input class="signup" type="text" placeholder="Enter Username" name="username" required>
          <label for="email"><b>Email</b></label>
          <input class="signup" type="text" placeholder="Enter Email" name="email" required>
          <label for="psw1"><b>Password</b></label>
          <input class="signup" type="password" placeholder="Enter Password" name="password" required>
          <label for="psw-repeat"><b>Repeat Password</b></label>
          <input class="signup" type="password" placeholder="Repeat Password" name="passwordTwo" required>
          <label><input type="checkbox" checked name="remember" style="margin-bottom:15px;"> Remember me</label>
          <p>By creating an account you agree to our <a href="#" style="color:dodgerblue;">Terms & Policy</a>.</p>

          <div class="clearfix">
            <button class="cancelbtn1" type="button" onclick="document.getElementById('id02').style.display='none'">Cancel</button>
            <button class="signupbtn" type="submit">Sign Up</button>
          </div>
      </div>
    </form>
  </div>
</div>
