<!DOCTYPE html>
<html lang="eng">

<!-- Head -->
<%-include("templates/head.ejs")-%>

<body>

  <!-- Nav -->
  <%-include("templates/nav.ejs")-%>

  <div class="w3-main" style="margin-top: 85px">
    <div class="w3-row w3">
      <% if (products) { %>
      <% for(var i = 0; i < products.length; i++) { %>
      <div class="w3-col l3 s6" style="width:307px;height: 307px;">
        <div class="w3-container">
          <div class="w3-display-container">
            <img style="width:250px;height: 250px;" src=<%=products[i].item.image%>>
            <span class="w3-badge w3-display-topleft"><%=products[i].qty%></span>
            <div class="w3-display-middle w3-display-hover">
              <a class="w3-button w3-black" onclick="removefromCart(<%=products[i].item.id%>)">remove item <i class="fa fa-shopping-cart"></i></a>
            </div>
          </div>
          <p><%=products[i].item.title%><br><b>£<%=products[i].Price%></b></p>
        </div>
      </div>
      <% } %>
      <% } %>
    </div>
    <% if (total == 0) { %>
    <h1>Cart is empty</h1>
    <% } else { %>
    <h1 style="margin-left:25px">Total: £<%=total%></h1>
    <a class="w3-button w3-black" href="/cart/empty-cart" style="margin-left:25px">Clear Cart</a>
    <a class="w3-button w3-black" href="/checkout" style="margin-left:25px">Checkout</a>
    <% } %>
  </div>

<!-- Footer -->
<%-include("templates/footer.ejs")-%>

</body>
</html>
